generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @default(autoincrement()) @id
  firstName String
  lastName  String
  email     String  @unique
  password  String
  phone     String
  address   String
  role      Role    @default(Customer)
  sales     Sale[]
  rentals   Rental[]
  createdAt DateTime @default(now()) 
  updatedAt DateTime @default(now()) 
}

model Car {
  id                Int     @default(autoincrement()) @id
  make              String
  model             String
  year              Int
  vin               String       @unique
  color             String
  mileage           Int
  purchasePrice     Float
  rentalPricePerDay Float
  status            CarStatus
  sales             Sale?
  rentals           Rental[]
}

model Sale {
  id         Int      @id @default(autoincrement())
  carId      Int      @unique
  userId     Int
  saleDate   DateTime
  salePrice  Float
  car        Car      @relation(fields: [carId], references: [id])
  user       User     @relation(fields: [userId], references: [id])
}

model Rental {
  id               Int      @id @default(autoincrement())
  carId            Int
  userId           Int
  rentalStartDate  DateTime
  rentalEndDate    DateTime
  rentalPrice      Float
  status           RentalStatus
  car              Car  @relation(fields: [carId], references: [id])
  user             User @relation(fields: [userId], references: [id])
}

enum Role {
  Admin
  Customer
}

enum CarStatus {
  Available
  Sold
  Rented
}

enum RentalStatus {
  Pending
  Active
  Completed
}